{
    "family": "app-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048",
    "executionRoleArn": "arn:aws:iam::486140753397:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "python-app",
            "image": "486140753397.dkr.ecr.us-east-1.amazonaws.com/python-app:latest",
            "cpu": 256,
            "portMappings": [
                {
                    "containerPort": 5000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "OTEL_METRICS_EXPORTER",
                    "value": "none"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/python-app",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        },
        {
            "name": "otel-collector",
            "image": "486140753397.dkr.ecr.us-east-1.amazonaws.com/otel-collector:latest",
            "cpu": 256,
            "essential": false,
            "environment": [
                {
                    "name": "LOGZIO_TRACING_TOKEN",
                    "value": "none"
                },
                {
                    "name": "LOGZIO_REGION",
                    "value": "us"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/otel-collector",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}